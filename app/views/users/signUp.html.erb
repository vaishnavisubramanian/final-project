<main class="signup_body">
    <form action="/create_new_user" method="post">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <% if flash[:error]%>
            <p class="signup_flash_error">
                <%= flash[:error]%>
            </p>
            <%end%>
                <p class="signup_text">CREATE</p>
                <p class="signup_text_acc"> ACCOUNT
                </p>
                <p class="signup_text2">Have an account?</p> <a href="/signin" class="signup_signin"> Sign in </a>
                <input placeholder="Username" type="text" class="signup_fullname" id="fullname" name="user[username]"><br>
                <input placeholder="Mail ID" type="email" class="signup_email" id="email" name="user[email]"><br>
                <input placeholder="Password" type="password" class="signup_password" id="password" name="user[password]"><br>
                <input type="checkbox" id="show-password" value="Show password">
                <p class="show_pw_text">Show password </p><br>
                <button type="submit" class="signup_create_button">Sign up</button>
    </form>
</main>
<script>
    function show_password() {
        let check = document.getElementById('show-password');
        if (check.checked) {
            document.getElementById('password').type = "text";
        } else {
            document.getElementById('password').type = "password";
        }
    }
    document.getElementById('show-password').addEventListener("change", show_password);
</script>